
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // System-level data for app configuration, tax rules, status, etc.
    // Allow read for any authenticated user, but restrict writes to admins.
    // This single rule covers all subcollections like taxRegistry, appStatus, etc.
    match /system/{path=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Add rules for your user-specific data collections here.
    // For example:
    // match /tenants/{tenantId}/{path=**} {
    //   allow read, write: if request.auth != null && request.auth.uid == tenantId;
    // }
  }
}
