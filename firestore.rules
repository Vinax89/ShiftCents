rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Live app status (signed‑in read; admin write)
    match /system/appStatus/items/{itemId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /system/appStatus/summary {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Admin‑editable tax registry
    match /system/taxRegistry/{year} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Compiled tax rules
    match /system/taxRules/{year}/{docId} {
      allow read: if true; // Publicly readable tax rules
    }

    // Official example cases (admin‑curated) and verification runs
    match /system/taxSamples/{year}/cases/{caseId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
     match /system/taxPaySamples/{year}/cases/{caseId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /system/taxVerifyRuns/{runId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Mapper Memory
    match /system/taxMapperMemory/{domain} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}