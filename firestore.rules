rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin-editable tax registry
    match /system/taxRegistry/{year} {
      allow read: if request.auth != null; // anyone signed in can read
      allow write: if request.auth != null && request.auth.token.admin == true; // only admins can write
    }

    // Official example cases (admin-curated) and verification runs
    match /system/taxSamples/{year} {
      allow read: if request.auth != null; // any signed-in user can read examples
      allow write: if request.auth != null && request.auth.token.admin == true; // admins write
      match /cases/{id} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.token.admin == true;
      }
    }
    match /system/taxVerifyRuns/{runId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Per-pay samples (admin-curated)
    match /system/taxPaySamples/{year} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
      match /cases/{id} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.token.admin == true;
      }
    }

    // Mapper Memory: remembers chosen column mappings per domain (admin-only writes)
    match /system/taxMapperMemory/{domain} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Live app status (readable by signed-in users; only admins write)
    match /system/appStatus/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
      match /items/{itemId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.token.admin == true;
      }
    }
  }
}
